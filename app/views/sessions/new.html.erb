
<!-- Page Header -->
<header class="masthead" style="height:60px; background-image:url(<%= asset_path 'articles-bg.jpg' %>)">
  <div class="overlay" >
  </div>
</header>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          Log in for alpha blog
        </div>
        <div class="card-body">
        <%= render 'layouts/msg'%>
          <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
            
            <div class="form-group">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class:  "form-control", placeholder: "Enter email" %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class:  "form-control", placeholder: "Enter password" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Log in', class: "btn btn-outline-primary btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small><%= link_to '[ Dont have an account? ]', signup_path %> </small>
        </div>
      </div>
    </div>
  </div>
</div>
