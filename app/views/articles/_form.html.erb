
<%=render 'shared/errors', obj: @article %>

<%= form_with(model: @article, local: true) do |f|%>
  <div class="form-group">
    <%= f.label :tittle, class: "form-label" %>
    <%= f.text_field :tittle, class:  "form-control", placeholder: "Enter title"%>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 6, class:  "form-control", placeholder: "Enter description"%>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "form-label" %>
    <div class=""> 
      <%= f.collection_select(:category_ids, Category.all, :id, :name,
      { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select rounded" }) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-outline-primary btn-lg"%>
  </div>
<% end %>