
<!-- Page Header -->
<header class="masthead" style="height:60px; background-image:url(<%= asset_path 'articles-bg.jpg' %>)">
  <div class="overlay" >
  </div>
</header>
<%= render 'layouts/msg'%>
<div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Emilio Galindo
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to @article.tittle, article_path(@article), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(@article.description, length: 100) %></p>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small><%= link_to '[ Cancel and return to article listing ]', articles_path %> </small>
          </div>
        </div>
      </div>
    </div>
</div>
