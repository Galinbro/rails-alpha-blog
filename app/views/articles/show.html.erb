<div id="page-content">
  <!-- Page Header -->
  <header class="masthead" style="height:60px; background-image:url(<%= asset_path 'articles-bg.jpg' %>)">
    <div class="overlay" >
    </div>
  </header>

<div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              Show article details
            </div>
            <div class="card-body">
              <%= form_with(model: @article, local: true) do |f|%>
                <div class="form-group">
                  <%= f.label :title, class: "form-label" %>
                  <%= f.text_field :tittle, class:  "form-control", placeholder: "Enter title", :readonly => true %>
                </div>
                <div class="form-group">
                  <%= f.label :description, class: "form-label" %>
                  <%= f.text_area :tittle, rows: 6, class:  "form-control", placeholder: "Enter description", :readonly => true %>
                </div>
              <% end %>
              <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
              <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-muted">
              <small><%= link_to '[ Cancel and return to article listing ]', articles_path %> </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>