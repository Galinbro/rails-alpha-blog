<header class="masthead" style="height:60px; background-image:url(<%= asset_path 'articles-bg.jpg' %>)">
  <div class="overlay" >
  </div>
</header>

<%= render 'layouts/msg'%>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-4 mt-2">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= @category.name %></h5>
        </div>
        <div class="card-footer text-muted">
          
            <%= link_to "Edit", edit_article_path(@category), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@category), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          
        </div>
      </div>
    </div>
  </div>
</div>