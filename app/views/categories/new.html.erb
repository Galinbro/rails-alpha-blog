
<!-- Page Header -->
<header class="masthead" style="height:60px; background-image:url(<%= asset_path 'articles-bg.jpg' %>)">
  <div class="overlay" >
  </div>
</header>

<%= render 'layouts/msg'%>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          Create new category
        </div>
        <div class="card-body">          
          <%=render 'shared/errors', obj: @category %>

          <%= form_with(model: @category, local: true) do |f|%>
            <div class="form-group">
              <%= f.label :name, 'Category name', class: "form-label" %>
              <%= f.text_field :name, class:  "form-control", placeholder: "Enter name"%>
            </div>
            <div class="form-group">
              <%= f.submit class: "btn btn-outline-primary btn-lg"%>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small><%= link_to '[ Cancel and return to categories listing ]', articles_path %> </small>
        </div>
      </div>
    </div>
  </div>
</div>
